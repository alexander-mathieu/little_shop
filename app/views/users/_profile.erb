<h1>Profile Page for <%= @user.name %></h1>

<section id="profile-data">
  <h2>Personal Information</h2>
  <p>Email: <%= @user.email %></p>
  <p>Role: <%= @user.role %></p>
  <p><%= link_to 'Edit Profile', edit_profile_path unless current_admin? %></p>
  <aside id="address-details">
    <h3>Addresses:</h3>
    <% if @user.addresses.any? %>
      <% @user.addresses.each do |address| %>
        <%= tag.div class: "card float-left m-3 address-card" do %>
          <%= tag.section class: "card-body" do %>
            <%= tag.h5 class: "card-title" do %>
              <p><%= address.address %></p>
            <% end %>
              <p>
                <%= address.city %>,
                <%= address.state %>
                <%= address.zip %>
              </p>
          <% end %>
        <% end %>
      <% end %>
      <p><%= link_to 'Edit Addresses', profile_addresses_path unless current_admin? %></p>
    <% else %>
      <p>You don't have any addresses yet.</p>
      <p><%= link_to 'Add an Address', new_profile_address_path unless current_admin? %></p>
    <% end %>
  </aside>
</section>

<section id="orders-data">
  <h2>Order Data</h2>
  <p><% if @user.orders.any? %>
  <%= link_to 'Customer Orders', profile_orders_path %>
  <% else %>
  You have no orders yet.
  <% end %></p>
</section>
